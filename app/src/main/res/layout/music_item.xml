<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="@dimen/standard_card_elevation"
    app:cardCornerRadius="@dimen/standard_card_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_music_item"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher_background"
            app:riv_corner_radius="8dp" />

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/iv_music_item"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:fontFamily="@font/digikala_font_bold"
            android:text="@string/song_name"
            android:textSize="@dimen/standard_font_size" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
